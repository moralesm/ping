<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:context=".EventDetailActivity" >

        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/lightblueback"
            android:padding="10dp"
            android:text="Dinner With Host"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/detailsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/eventTitle"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Details"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/backwithblueborder"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/eventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/eventTitle"
                android:text="Location"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/eventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/eventLocation"
                android:text="Date"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/eventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/eventDate"
                android:text="Time"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/whoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/eventTime"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Who is Going?"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/confirmedPersonsField"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/eventDate"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/backwithblueborder"
            android:focusable="false"
            android:textSize="14dp" />

        <Switch
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:background="#090974"
            android:switchMinWidth="150dp"
            android:textOff="Not Going"
            android:textOn="Going" />
    </LinearLayout>

</ScrollView>