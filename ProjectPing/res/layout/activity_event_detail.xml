<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:context=".EventDetailActivity" >

        <!-- <TextView -->
        <!-- android:id="@+id/eventTitle" -->
        <!-- android:layout_width="fill_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_centerHorizontal="true" -->
        <!-- android:gravity="center" -->
        <!-- android:background="#090947" -->
        <!-- android:textColor="#ffffff" -->
        <!-- android:padding="10dp" -->
        <!-- android:text="[Event] with [Host]" -->
        <!-- android:textSize="20dp" /> -->

        <TextView
            android:id="@+id/detailsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Details"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/backwithlightblueborder"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/eventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Location"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/eventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/eventLocation"
                android:text="Date"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/eventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/eventDate"
                android:text="Time"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/whoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/eventTime"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Who is Going?"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/confirmedPersonsField"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/eventDate"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/backwithlightblueborder"
            android:focusable="false"
            android:textSize="14dp" />

        <Button
            android:id="@+id/select_friends_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="#090974"
            android:text="Going"
            android:textColor="#ffffff" />
        <!-- android:layout_alignParentLeft="true" -->
        <!-- android:layout_below="@+id/time_field" -->

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:background="#090974"
            android:text="Not Going"
            android:textColor="#ffffff" />
    </LinearLayout>

</ScrollView>