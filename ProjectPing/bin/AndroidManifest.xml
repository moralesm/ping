<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ping"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/ping_icon"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >
        <activity
            android:name="com.example.ping.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ping.NewPingActivity"
            android:label="@string/title_activity_new_ping" >
        </activity>
        <activity
            android:name="com.example.ping.SelectFriendsActivity"
            android:label="@string/title_activity_select_friends" >
        </activity>
        <activity
            android:name="com.example.ping.PingEvent"
            android:label="@string/title_activity_ping_event" >
        </activity>
        <activity
            android:name="com.example.ping.EventsListActivity"
            android:label="@string/title_activity_events_list" >
        </activity>
        <activity
            android:name="com.example.ping.EventDetailActivity"
            android:label="@string/title_activity_event_detail" >
        </activity>
    </application>

</manifest>